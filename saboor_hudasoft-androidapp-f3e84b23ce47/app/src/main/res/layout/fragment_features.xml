<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_features"
    tools:context=".Activity.NewsAnnounceDetail">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@android:color/transparent">


                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="300dp">

                                <com.google.android.material.card.MaterialCardView
                                    android:id="@+id/features_video"
                                    android:layout_width="match_parent"
                                    android:layout_height="@dimen/_310sdp"
                                    app:cardCornerRadius="@dimen/_20sdp"
                                    android:layout_marginTop="-17dp">
                                    <com.universalvideoview.UniversalVideoView
                                        android:id="@+id/videoView"
                                        android:layout_width="fill_parent"
                                        android:layout_height="fill_parent"
                                        android:layout_gravity="center"
                                        android:visibility="visible"
                                        android:foreground="@color/image_overlay_color"
                                        app:uvv_autoRotation="false"
                                        app:uvv_fitXY="true" />


                                </com.google.android.material.card.MaterialCardView>



                                <VideoView
                                    android:id="@+id/video_view"
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:layout_alignParentTop="true"
                                    android:visibility="gone"
                                    android:layout_alignParentBottom="true"
                                    android:foreground="@color/image_overlay_color"
                                    android:layout_gravity="bottom">
                                </VideoView>


                                <!--                    <View-->
                                <!--                        android:layout_width="match_parent"-->
                                <!--                        android:layout_height="match_parent"-->
                                <!--                        android:background="@drawable/rounded_bottom_radius_box" />-->

                            </RelativeLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_marginTop="15dp"
                                android:orientation="vertical">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="12dp"
                                    android:gravity="center"
                                    android:textAllCaps="true"
                                    android:textSize="@dimen/_20sdp"
                                    android:fontFamily="@font/sweetsanspro_bold"
                                    android:textColor="@color/bg_light_blue_color"
                                    android:text="@string/you_dream_it">
                                </TextView>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textSize="@dimen/_14sdp"
                                    android:textAllCaps="true"
                                    android:fontFamily="@font/sweetsanspro_bold"
                                    android:textColor="@color/black"
                                    android:text="@string/we_built_it">
                                </TextView>
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginEnd="20dp"

                                android:layout_marginBottom="70dp"
                                android:orientation="vertical">






                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/features_item"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:nestedScrollingEnabled="false"
                                        android:overScrollMode="never"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginBottom="40dp">
                                    </androidx.recyclerview.widget.RecyclerView>

                                </RelativeLayout>



                            </LinearLayout>
                        </LinearLayout>
                    </ScrollView>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </LinearLayout>






                </FrameLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"

                    android:orientation="vertical">
                    <include
                        android:visibility="invisible"
                        layout="@layout/top_city_logo_with_nav">
                    </include>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/backtodashboard1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:visibility="gone"
                            android:layout_gravity="center"
                            android:src="@mipmap/back_arrow_icon">
                        </ImageView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_18sdp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:fontFamily="@font/sweetsanspro_bold"
                            android:layout_marginEnd="10dp"
                            android:textColor="@color/white"
                            android:text="@string/features">
                        </TextView>


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="bottom"
                            android:orientation="horizontal">
                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/feature_notification"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|bottom"
                                    android:src="@mipmap/notification_white_icon">
                                </ImageView>
                                <LinearLayout
                                    android:id="@+id/notification_Count_bg"
                                    android:layout_width="23dp"
                                    android:layout_height="23dp"
                                    android:background="@drawable/noti_count_circle"
                                    android:gravity="center"
                                    android:layout_marginTop="7dp"
                                    android:layout_marginBottom="7dp"
                                    android:layout_marginStart="@dimen/_23sdp">
                                    <TextView
                                        android:id="@+id/notification_Count"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/white"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:textStyle="bold"
                                        android:visibility="visible"
                                        android:fontFamily="@font/sweetsanspro_regular"
                                        android:textSize="@dimen/_8sdp"
                                        android:text="@string/_23">
                                    </TextView>
                                </LinearLayout>
                            </FrameLayout>
                            <ImageView
                                android:id="@+id/feature_userprofile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="15dp"
                                android:src="@mipmap/user_white_icon">
                            </ImageView>
                            <LinearLayout
                                android:id="@+id/signup_btn_home"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom"
                                    android:src="@mipmap/user_white_icon">
                                </ImageView>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_16sdp"
                                    android:gravity="bottom"
                                    android:layout_marginStart="10dp"
                                    android:textColor="@color/white"
                                    android:text="Signup">
                                </TextView>
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>
            </RelativeLayout>


        </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>