<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SplashScreen4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <VideoView
            android:id="@+id/bg_video3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="-40dp"
            android:layout_marginEnd="-40dp"></VideoView>

    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/full_bg_light_blue"
                android:alpha="0.7">
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp">
                        <LinearLayout
                            android:id="@+id/back_tosignup"
                            android:layout_width="@dimen/_40sdp"
                            android:layout_marginTop="30dp"
                            android:layout_height="@dimen/_30sdp"
                            android:gravity="left">
                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:scaleType="fitXY"
                                android:layout_gravity="left|center"
                                android:src="@mipmap/back_arrow_icon">
                            </ImageView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"

                            android:gravity="center"
                            android:orientation="vertical">
<!--                            <ImageView-->
<!--                                android:layout_width="100dp"-->
<!--                                android:layout_height="100dp"-->
<!--                                android:src="@mipmap/topcity_logo_one">-->
<!--                            </ImageView>-->
                            <LinearLayout
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:gravity="center">

                                <pl.droidsonroids.gif.GifImageView
                                    android:id="@+id/gif_logo_login"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/logo_rotates">
                                </pl.droidsonroids.gif.GifImageView>

                            </LinearLayout>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/_25sdp"
                                android:textColor="@color/white"
                                android:layout_marginTop="-16dp"
                                android:fontFamily="@font/sweetsanspro_bold"
                                android:text="@string/topcity_1">

                            </TextView>
                        </LinearLayout>

                    </FrameLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="500dp"
                            android:padding="20dp"
                            android:background="@drawable/round_dialog"
                            android:alpha="0.8"
                            android:orientation="vertical"
                            android:backgroundTint="@color/box_light_blue_color">
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical">


                            <LinearLayout
                                android:id="@+id/all_froms_filed"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="visible">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingRight="10dp"
                                    android:paddingLeft="22dp"
                                    android:gravity="center">
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@mipmap/guest_icon">

                                    </ImageView>
                                    <EditText
                                        android:id="@+id/user_name_signup"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:hint="@string/name"
                                        android:enabled="false"
                                        android:fontFamily="@font/sweetsanspro_regular"
                                        android:textSize="@dimen/_12sdp"
                                        android:layout_marginStart="10dp"
                                        android:inputType="text"
                                        android:textColor="@color/white"
                                        android:backgroundTint="@android:color/transparent"
                                        android:textColorHint="@color/light_dim_gray">
                                    </EditText>

                                </LinearLayout>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_marginTop="5dp"
                                    android:alpha="0.3"
                                    android:layout_marginStart="12dp"
                                    android:layout_marginEnd="12dp"
                                    android:background="@color/dim_gray">
                                </View>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingRight="10dp"
                                    android:paddingLeft="14dp"
                                    android:paddingTop="12dp"
                                    android:gravity="center">
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@mipmap/contact_icon">

                                    </ImageView>
                                    <EditText
                                        android:id="@+id/user_cnic_signup"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:maxLength="15"
                                        android:enabled="false"
                                        android:fontFamily="@font/sweetsanspro_regular"
                                        android:textSize="@dimen/_12sdp"
                                        android:hint="@string/_42101_0372650_2"
                                        android:layout_marginStart="10dp"
                                        android:inputType="number"
                                        android:textColor="@color/white"
                                        android:backgroundTint="@android:color/transparent"
                                        android:textColorHint="@color/light_dim_gray">
                                    </EditText>

                                </LinearLayout>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_marginTop="5dp"
                                    android:alpha="0.3"
                                    android:layout_marginStart="12dp"
                                    android:layout_marginEnd="12dp"
                                    android:background="@color/dim_gray">
                                </View>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="50dp"
                                    android:paddingRight="10dp"
                                    android:paddingLeft="20dp"
                                    android:paddingTop="12dp"
                                    android:gravity="center">
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@mipmap/call_icon">

                                    </ImageView>
                                    <EditText
                                        android:id="@+id/user_contact_signup"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:hint="987 - 6543 - 3211"
                                        android:textSize="@dimen/_12sdp"
                                        android:visibility="gone"
                                        android:fontFamily="@font/sweetsanspro_regular"
                                        android:layout_marginStart="10dp"
                                        android:inputType="phone"
                                        android:textColor="@color/white"
                                        android:backgroundTint="@android:color/transparent"
                                        android:textColorHint="@color/light_dim_gray">
                                    </EditText>
                                    <Spinner
                                        android:id="@+id/phone_dropDown"
                                        android:layout_width="match_parent"
                                        style="@style/mySpinnerItemStyle"
                                        android:layout_height="match_parent"
                                        android:layout_marginEnd="@dimen/_5sdp"
                                        android:layout_marginStart="-10dp">
                                    </Spinner>

                                </LinearLayout>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_marginTop="5dp"
                                    android:alpha="0.3"
                                    android:layout_marginStart="12dp"
                                    android:layout_marginEnd="12dp"
                                    android:background="@color/dim_gray">
                                </View>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingRight="10dp"
                                    android:paddingLeft="20dp"
                                    android:paddingTop="12dp"
                                    android:gravity="center">
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@mipmap/user_email_icon">

                                    </ImageView>
                                    <EditText
                                        android:id="@+id/user_email_signup"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:hint="useremail@domain.com"
                                        android:layout_marginStart="10dp"
                                        android:inputType="textEmailAddress"
                                        android:textSize="@dimen/_12sdp"
                                        android:fontFamily="@font/sweetsanspro_regular"
                                        android:textColor="@color/white"
                                        android:backgroundTint="@android:color/transparent"
                                        android:textColorHint="@color/light_dim_gray">
                                    </EditText>

                                </LinearLayout>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_marginTop="5dp"
                                    android:alpha="0.3"
                                    android:layout_marginStart="12dp"
                                    android:layout_marginEnd="12dp"
                                    android:background="@color/dim_gray">
                                </View>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingRight="10dp"
                                    android:paddingLeft="20dp"
                                    android:paddingTop="12dp"
                                    android:gravity="center">
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@mipmap/password_icon">

                                    </ImageView>
                                    <EditText
                                        android:id="@+id/user_pass_signup"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:hint="@string/password"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginEnd="10dp"
                                        android:inputType="textPassword"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_12sdp"
                                        android:fontFamily="@font/sweetsanspro_regular"
                                        android:backgroundTint="@android:color/transparent"
                                        android:textColorHint="@color/light_dim_gray">
                                    </EditText>
                                    <ImageView
                                        android:id="@+id/password_hide_eye"

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="10dp"
                                        android:layout_gravity="center"
                                        android:src="@mipmap/hide_eye">
                                    </ImageView>
                                    <ImageView
                                        android:id="@+id/password_show_eye"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:visibility="gone"
                                        android:layout_marginEnd="10dp"
                                        android:layout_gravity="center"
                                        android:src="@mipmap/eye">
                                    </ImageView>

                                </LinearLayout>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_marginTop="5dp"
                                    android:alpha="0.3"
                                    android:layout_marginStart="12dp"
                                    android:layout_marginEnd="12dp"
                                    android:background="@color/dim_gray">
                                </View>

                                <TextView
                                    android:id="@+id/password_validation"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:gravity="center"
                                    android:text="@string/password_desn_t_match"
                                    android:textAllCaps="false"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/holo_red_dark"
                                    android:textSize="14sp"
                                    android:visibility="gone" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:paddingRight="10dp"
                                    android:paddingLeft="20dp"
                                    android:paddingTop="12dp"
                                    android:gravity="center">
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@mipmap/password_icon">

                                    </ImageView>
                                    <EditText
                                        android:id="@+id/confirmpassword_signup"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:textSize="@dimen/_12sdp"
                                        android:hint="@string/confirm_password"
                                        android:layout_marginStart="10dp"
                                        android:layout_marginEnd="10dp"
                                        android:inputType="textPassword"
                                        android:textColor="@color/white"
                                        android:fontFamily="@font/sweetsanspro_regular"
                                        android:backgroundTint="@android:color/transparent"
                                        android:textColorHint="@color/light_dim_gray">
                                    </EditText>
                                    <ImageView
                                        android:id="@+id/confirmpassword_hide_eye"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginEnd="10dp"
                                        android:src="@mipmap/hide_eye">
                                    </ImageView>
                                    <ImageView
                                        android:id="@+id/confirmpassword_show_eye"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:visibility="gone"
                                        android:layout_marginEnd="10dp"
                                        android:layout_gravity="center"
                                        android:src="@mipmap/eye">
                                    </ImageView>

                                </LinearLayout>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="2dp"
                                    android:layout_marginTop="5dp"
                                    android:alpha="0.3"
                                    android:layout_marginStart="12dp"
                                    android:layout_marginEnd="12dp"
                                    android:background="@color/dim_gray">
                                </View>
                                <TextView
                                    android:id="@+id/validate_message"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="15dp"
                                    android:gravity="center"
                                    android:text="some error occurred"
                                    android:textAllCaps="false"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/holo_red_dark"
                                    android:textSize="@dimen/_14sdp"
                                    android:visibility="gone" />
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:layout_marginTop="30dp"
                                    android:background="@color/white">
                                    <TextView
                                        android:id="@+id/signup_btn"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black"
                                        android:text="@string/signup"
                                        android:paddingTop="8dp"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:fontFamily="@font/sweetsanspro_regular"
                                        android:paddingBottom="8dp"
                                        android:paddingLeft="60dp"
                                        android:paddingRight="60dp"
                                        android:textSize="@dimen/_13sdp"
                                        android:textAllCaps="false">
                                    </TextView>

                                </LinearLayout>

                            </LinearLayout>



                        </LinearLayout>

                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>


        </FrameLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>