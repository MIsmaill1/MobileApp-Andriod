<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/view_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="@dimen/_15sdp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="50dp"
                android:visibility="visible"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/notification_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@mipmap/topcitysplashlogo">
                </ImageView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                 android:layout_weight="1"
                android:layout_marginEnd="@dimen/_15sdp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/title_notification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/sweetsanspro_regular"
                    android:text="@string/submit"
                    android:layout_marginBottom="5dp"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black">
                </TextView>
                <TextView
                    android:id="@+id/notification_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="4"
                    android:ellipsize="end"
                    android:fontFamily="@font/sweetsanspro_regular"
                    android:text="@string/topcity_1_offers_residential_and_commercial_plots_of_different_categories_and_sizes_to_general_public_for_sale_following_are_the_important_documents_which_required_from_purchaser_for_new_sale_booking_of_plots_there_are_two_type_of_purchasers_which_are_also_mentioned_below"
                    android:textSize="@dimen/_10sdp">
                </TextView>
                <TextView
                    android:id="@+id/time_notification"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/_10sdp"
                    android:visibility="visible"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/sweetsanspro_regular"
                    android:text="@string/time">

                </TextView>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_5sdp"
            android:background="#C6C3C3">
        </View>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>