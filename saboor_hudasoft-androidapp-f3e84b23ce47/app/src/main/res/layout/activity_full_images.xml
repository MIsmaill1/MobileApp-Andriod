<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Activity.FullImages">

        <LinearLayout
            android:id="@+id/back"
            android:layout_width="@dimen/_40sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_height="@dimen/_30sdp">
                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@mipmap/back_arrow_icon">
                </ImageView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center">
                <com.HS.Topcity.CustomClasses.ExtendedViewPager
                    android:id="@+id/view_pager1"
                    android:layout_width="match_parent"
                    android:clipChildren="false"
                    android:visibility="gone"
                    android:layout_height="@dimen/_400sdp" />
                <com.HS.Topcity.CustomClasses.EnableDisableViewPager
                    android:orientation="horizontal"
                    android:id="@+id/view_pager2"
                    android:clipChildren="false"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_400sdp" />
                <androidx.viewpager2.widget.ViewPager2
                    android:orientation="horizontal"
                    android:id="@+id/view_pager"
                    android:clipChildren="false"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_400sdp" />
                <com.yc.gallerylib.recyclerView.GalleryRecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
        </LinearLayout>




</LinearLayout>