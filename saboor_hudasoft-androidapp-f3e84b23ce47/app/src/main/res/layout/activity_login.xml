<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SplashScreen4">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <VideoView
            android:id="@+id/bg_video"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="-40dp"
            android:layout_marginEnd="-40dp"></VideoView>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/full_bg_light_blue"
                android:alpha="0.7">
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="190dp"
                        android:layout_marginTop="20dp"
                        android:gravity="center">

                        <pl.droidsonroids.gif.GifImageView
                            android:id="@+id/gif_logo_login"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/logo_rotates">
                        </pl.droidsonroids.gif.GifImageView>
<!--                        <ImageView-->
<!--                            android:layout_width="wrap_content"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:scaleType="fitXY"-->
<!--                            android:src="@mipmap/topcity_logo_one">-->
<!--                        </ImageView>-->

                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_30sdp"
                        android:textColor="@color/white"
                        android:layout_marginTop="-30dp"
                        android:fontFamily="@font/sweetsanspro_bold"
                        android:text="@string/topcity_1">

                    </TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="30dp"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="280dp"
                            android:padding="20dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/round_dialog"
                            android:alpha="0.8"
                            android:backgroundTint="@color/box_light_blue_color">
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="20dp"
                                android:paddingLeft="20dp"
                                android:paddingBottom="20dp"
                                android:paddingRight="@dimen/_10sdp"
                                android:gravity="center">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/user_email_icon">

                                </ImageView>
                                <EditText
                                    android:id="@+id/login_email"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/email_addresses"
                                    android:layout_marginStart="10dp"
                                    android:maxLines="1"
                                    android:textSize="@dimen/_12sdp"
                                    android:ellipsize="end"

                                    android:scrollHorizontally="true"
                                    android:fontFamily="@font/sweetsanspro_regular"
                                    android:inputType="textEmailAddress"
                                    android:textColor="@color/white"
                                    android:backgroundTint="@android:color/transparent"
                                    android:textColorHint="@color/light_dim_gray">
                                </EditText>

                            </LinearLayout>
                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:layout_marginTop="-13dp"
                                android:alpha="0.3"
                                android:background="@color/dim_gray">
                            </View>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="20dp"
                                android:paddingTop="12dp"
                                android:gravity="center">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/password_icon">

                                </ImageView>
                                <EditText
                                    android:id="@+id/login_password"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:hint="@string/password"
                                    android:fontFamily="@font/sweetsanspro_regular"
                                    android:layout_marginStart="10dp"
                                    android:inputType="textPassword"
                                    android:textSize="@dimen/_12sdp"
                                    android:textColor="@color/white"
                                    android:backgroundTint="@android:color/transparent"
                                    android:textColorHint="@color/light_dim_gray">
                                </EditText>
                                <LinearLayout

                                    android:id="@+id/password_hide_eye"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginEnd="@dimen/_5sdp">
                                    <ImageView

                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="@dimen/_9sdp"
                                        android:layout_marginStart="@dimen/_10sdp"
                                        android:layout_gravity="center"
                                        android:src="@mipmap/hide_eye">
                                    </ImageView>
                                </LinearLayout>
                                <LinearLayout
                                    android:id="@+id/password_show_eye"
                                    android:layout_width="wrap_content"
                                    android:visibility="gone"
                                    android:layout_marginEnd="@dimen/_5sdp"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginEnd="@dimen/_9sdp"
                                        android:layout_marginStart="@dimen/_10sdp"
                                        android:layout_gravity="center"
                                        android:src="@mipmap/eye">
                                    </ImageView>
                                </LinearLayout>


                            </LinearLayout>
                            <TextView
                                android:id="@+id/login_forget_pass"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/forget_password"
                                android:layout_marginEnd="@dimen/_10sdp"
                                android:layout_gravity="end"
                                android:textSize="@dimen/_10sdp"
                                android:fontFamily="@font/sweetsanspro_regular"
                                android:textColor="@color/light_dim_gray"
                                android:gravity="center|end">
                            </TextView>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginEnd="10dp"
                                android:orientation="horizontal">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_gravity="center">
                                    <TextView
                                        android:id="@+id/login_signup_btn"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/white"
                                        android:layout_weight="1"
                                        android:text="@string/signup"
                                        android:paddingTop="8dp"
                                        android:fontFamily="@font/sweetsanspro_regular"
                                        android:background="#9F707070"
                                        android:paddingBottom="8dp"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:textSize="@dimen/_13sdp"
                                        android:textAllCaps="false"
                                        android:backgroundTint="#88707070">
                                    </TextView>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_gravity="center"
                                    android:gravity="center">
                                    <TextView
                                        android:id="@+id/login_loginbtn"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/black"
                                        android:text="@string/login"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:fontFamily="@font/sweetsanspro_regular"
                                        android:layout_weight="1"
                                        android:background="@color/white"
                                        android:backgroundTint="@color/white"
                                        android:paddingTop="7dp"
                                        android:paddingBottom="7dp"
                                        android:textSize="@dimen/_13sdp"
                                        android:textAllCaps="false">
                                    </TextView>

                                </LinearLayout>

                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/biometric_screen"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_gravity="center"
                                android:layout_marginTop="30dp"
                                android:gravity="center">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:src="@mipmap/fingerprint_icon">
                                </ImageView>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/_12sdp"
                                    android:fontFamily="@font/sweetsanspro_regular"
                                    android:textColor="@color/white"
                                    android:layout_marginStart="10dp"
                                    android:text="@string/biometric_login">

                                </TextView>
                            </LinearLayout>


                        </LinearLayout>

                    </FrameLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:layout_marginTop="100dp"
                    android:layout_marginBottom="40dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/Guest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@mipmap/guest_icon">
                        </ImageView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/sweetsanspro_regular"
                            android:text="@string/continue_as_guest"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_14sdp">

                        </TextView>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>





        </FrameLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>