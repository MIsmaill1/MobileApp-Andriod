<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AddSharedAccount">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">
                <include
                    layout="@layout/top_city_logo_with_border">
                </include>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="20dp"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/back_to_add_share_account"
                                android:layout_width="@dimen/_40sdp"
                                android:layout_height="@dimen/_30sdp">
                                <ImageView

                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:scaleType="fitXY"
                                    android:src="@mipmap/blue_back_left_arrow_icon">

                                </ImageView>
                            </LinearLayout>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="5dp"
                                android:layout_weight="1"
                                android:visibility="invisible"
                                android:fontFamily="@font/sweetsanspro_bold"
                                android:text="@string/create_accounts"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16sdp">

                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingTop="4dp">


                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/notification_add_share_account"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:scaleType="fitXY"
                                    android:src="@mipmap/notification_icon">
                                </ImageView>
                                <LinearLayout
                                    android:id="@+id/notification_Count_bg"
                                    android:layout_width="23dp"
                                    android:layout_height="23dp"
                                    android:background="@drawable/noti_count_circle"
                                    android:gravity="center"
                                    android:layout_marginBottom="10dp"
                                    android:layout_marginStart="@dimen/_13sdp">
                                    <TextView
                                        android:id="@+id/notification_Count"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/white"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:textStyle="bold"
                                        android:visibility="visible"
                                        android:fontFamily="@font/sweetsanspro_regular"
                                        android:textSize="@dimen/_8sdp"
                                        android:text="@string/_23">
                                    </TextView>
                                </LinearLayout>
                            </FrameLayout>
                            <ImageView
                                android:id="@+id/user_icon_add_share_account"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:src="@mipmap/user_icon"></ImageView>

                            <LinearLayout
                                android:id="@+id/signup_btn_home"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">


                                <TextView
                                    android:id="@+id/signup_text_home"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:gravity="bottom"
                                    android:text="Signup"
                                    android:textColor="@color/bg_light_blue_color"
                                    android:textSize="@dimen/_16sdp"
                                    android:visibility="gone"></TextView>
                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </RelativeLayout>



                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fillViewport="true"
                        android:layout_marginTop="30dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="20dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:visibility="visible"
                                    android:fontFamily="@font/sweetsanspro_bold"
                                    android:text="@string/share_your_property"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_18sdp">

                                </TextView>

                                <TextView
                                    android:id="@+id/no_property_txt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="@dimen/_400sdp"
                                    android:visibility="gone"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/sweetsanspro_regular"
                                    android:text="@string/you_are_not_authorized_to_view_this_page"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_16sdp">

                                </TextView>
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="30dp"
                                android:visibility="visible"
                                android:orientation="vertical">
                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/Shared_your_property_list"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                </androidx.recyclerview.widget.RecyclerView>
                            </LinearLayout>
                            <LinearLayout
                                android:id="@+id/add_share_account_textFileds"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone"
                                android:layout_marginStart="25dp"
                                android:layout_marginEnd="25dp"
                                android:layout_marginTop="5dp">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:visibility="visible"
                                    android:layout_marginTop="20dp"
                                    android:fontFamily="@font/sweetsanspro_heavy"
                                    android:text="@string/enter_new_user_details"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_16sdp">

                                </TextView>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="20dp"
                                    android:orientation="vertical">


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="45dp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:background="@drawable/rounded_text_field_blue"
                                        android:gravity="center|top"
                                        android:orientation="horizontal"
                                        android:paddingLeft="10dp"
                                        android:paddingRight="10dp">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="10dp"
                                            android:layout_gravity="center"
                                            android:src="@mipmap/user_icon">

                                        </ImageView>
                                        <EditText
                                            android:editable="false"
                                            android:id="@+id/add_share_account_name"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:inputType="text"
                                            android:enabled="true"
                                            android:layout_marginStart="3dp"
                                            android:backgroundTint="@android:color/transparent"
                                            android:fontFamily="@font/sweetsanspro_regular"
                                            android:hint="@string/name"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_12sdp"
                                            tools:ignore="Deprecated" />



                                    </LinearLayout>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="20dp"
                                    android:orientation="vertical">


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="45dp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:background="@drawable/rounded_text_field_blue"
                                        android:gravity="center|top"
                                        android:orientation="horizontal"
                                        android:paddingLeft="10dp"
                                        android:paddingRight="10dp">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="11dp"
                                            android:layout_gravity="center"
                                            android:src="@mipmap/user_type_icon">

                                        </ImageView>

                                        <Spinner
                                            android:id="@+id/user_type_add_share_account"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="-10dp"
                                            android:layout_weight="1">
                                        </Spinner>



                                    </LinearLayout>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="20dp"
                                    android:orientation="vertical">


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="45dp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:background="@drawable/rounded_text_field_blue"
                                        android:gravity="center|top"
                                        android:orientation="horizontal"
                                        android:paddingLeft="10dp"
                                        android:paddingRight="10dp">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="50dp"
                                            android:padding="8dp"
                                            android:layout_gravity="center"
                                            android:src="@mipmap/contact_blue_icon">

                                        </ImageView>
                                        <EditText
                                            android:editable="false"
                                            android:id="@+id/add_share_account_Cnic"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:layout_marginStart="3dp"
                                            android:inputType="number"
                                            android:maxLength="15"
                                            android:enabled="true"
                                            android:backgroundTint="@android:color/transparent"
                                            android:fontFamily="@font/sweetsanspro_regular"
                                            android:hint="@string/cnic_number"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_12sdp"
                                            tools:ignore="Deprecated" />

                                    </LinearLayout>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="20dp"
                                    android:orientation="vertical">


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="45dp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:background="@drawable/rounded_text_field_blue"
                                        android:gravity="center|top"
                                        android:orientation="horizontal"
                                        android:paddingLeft="10dp"
                                        android:paddingRight="10dp">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="10dp"
                                            android:layout_gravity="center"
                                            android:src="@mipmap/email_icon1">

                                        </ImageView>
                                        <EditText
                                            android:editable="false"
                                            android:id="@+id/add_share_account_email"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:layout_marginStart="3dp"
                                            android:enabled="true"
                                            android:inputType="textEmailAddress"
                                            android:backgroundTint="@android:color/transparent"
                                            android:fontFamily="@font/sweetsanspro_regular"
                                            android:hint="@string/email"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_12sdp"
                                            tools:ignore="Deprecated" />



                                    </LinearLayout>

                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="20dp"
                                    android:orientation="vertical">


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="45dp"
                                        android:layout_marginTop="@dimen/_5sdp"
                                        android:background="@drawable/rounded_text_field_blue"
                                        android:gravity="center|top"
                                        android:orientation="horizontal"
                                        android:paddingLeft="10dp"
                                        android:paddingRight="10dp">

                                        <ImageView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:padding="10dp"
                                            android:layout_gravity="center"
                                            android:src="@mipmap/call_blue_icon">

                                        </ImageView>
                                        <EditText
                                            android:editable="false"
                                            android:id="@+id/add_share_account_phone"
                                            android:layout_width="wrap_content"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:layout_marginStart="3dp"
                                            android:enabled="true"
                                            android:inputType="number"
                                            android:maxLength="11"
                                            android:backgroundTint="@android:color/transparent"
                                            android:fontFamily="@font/sweetsanspro_regular"
                                            android:hint="@string/phone_number"
                                            android:textColor="@color/black"
                                            android:textSize="@dimen/_12sdp"
                                            tools:ignore="Deprecated" />



                                    </LinearLayout>


                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/shared_Account_share_btn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:background="@drawable/blue_button_rounded"
                                    android:gravity="center"
                                    android:layout_marginStart="5dp"
                                    android:layout_marginBottom="10dp"
                                    android:layout_gravity="center"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:paddingLeft="60dp"
                                        android:paddingTop="10dp"
                                        android:paddingRight="60dp"
                                        android:fontFamily="@font/sweetsanspro_bold"
                                        android:paddingBottom="10dp"
                                        android:text="@string/share"
                                        android:textAllCaps="false"
                                        android:textColor="@color/white"
                                        android:textSize="@dimen/_12sdp">
                                    </TextView>

                                </LinearLayout>
                            </LinearLayout>

                        </LinearLayout>
                    </ScrollView>




            </LinearLayout>


        </LinearLayout>




</LinearLayout>