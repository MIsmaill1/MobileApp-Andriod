<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="menu_text_style" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="itemIconTint">@color/white</item>


    </style>
    <style name="fabtheme" parent="Widget.Design.FloatingActionButton">
        <item name="colorOnSecondary">@color/bg_light_blue_color</item>
    </style>

    <style name="menu_text_style1" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu">
        <item name="android:textSize">@dimen/_9sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="tabContentStart">@dimen/_5sdp</item>

    </style>


    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>


    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">40dp</item>
        <item name="cornerSizeBottomLeft">40dp</item>
    </style>

    <style name="MineCustomTabText2" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_11sdp</item>
        <item name="textAllCaps">false</item>
        <item name="background">@drawable/rounded_blue_button</item>
        <item name="fontFamily">@font/sweetsanspro_regular</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="MineCustomTabText3" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="textAllCaps">false</item>
        <item name="background">@drawable/rounded_blue_button</item>
        <item name="fontFamily">@font/sweetsanspro_regular</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/bg_light_blue_color</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>
    <style name="ToolbarColoredBackArrow" parent="AppTheme">
        <item name="android:textColorSecondary">@color/white</item>
        <item name="iconSize">@dimen/_20sdp</item>
        <item name="drawerArrowStyle">@style/WhiteDrawerIconStyle</item>
    </style>
    <style name="WhiteDrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>
    <style name="AppBaseTheme" parent="android:Theme.Light">
    </style>
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:fontFamily">@font/sweetsanspro_regular</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

</resources>